<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreTickets">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mushroom_search_top_image"
        android:layout_centerVertical="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        />

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="@string/attentionMessage"
        android:textAlignment="center"
        android:textColor="#464654"
        android:textSize="14dp"
        android:textStyle="bold"
       />

    <Button
        android:id="@+id/AllMushrooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/all_mushroom"
        android:backgroundTint="@color/colorBlueDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/btnCreateTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorRedLight"
        android:src="@drawable/gomba_search"
        />



</androidx.coordinatorlayout.widget.CoordinatorLayout>